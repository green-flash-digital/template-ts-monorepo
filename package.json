{
  "name": "@gfdigital/template-ts-monorepo",
  "private": true,
  "version": "0.0.1",
  "description": "An opinionated monorepo template that includes boilerplate examples for TS & Vite library packages",
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
